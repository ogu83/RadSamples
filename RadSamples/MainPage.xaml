<Page x:Class="RadGridViewIsBusyIndicator.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RadGridViewIsBusyIndicator"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:t="http://schemas.telerik.com/2008/xaml/presentation"
      mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBox"
           t:StyleManager.BasedOn="Office_Blue" />
        <Style x:Key="TextBoxStyle"
           TargetType="TextBox"
           t:StyleManager.BasedOn="Office_Blue" />
        <Style TargetType="Button"
           t:StyleManager.BasedOn="Office_Blue" />
        <Style TargetType="RadioButton"
           t:StyleManager.BasedOn="Office_Blue" />
        <Style TargetType="TextBlock"
           t:StyleManager.BasedOn="Office_Blue" />
    </Page.Resources>
    <Grid>
        <t:RadButton x:Name="btnRadWindow" Content="Open RadWindow" Click="btnRadWindow_Click" 
                     VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="150" />
    </Grid>
</Page>